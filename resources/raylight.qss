QLabel{
    border: 0px solid #ffffff;
    color: #ffffff;
    font-size: 12px;
    font-family: "Microsoft YaHei";
}

QComboBox{
    background-color: rgb(10,10,10);
    color: #ffffff;
    border: 0px solid  rgb(10,10,10);
    border-radius: 4px;
    font-size: 12px;
    font-family: "Microsoft YaHei";
}

QScrollArea#FilterWidgetScrollArea {
    border: 2px solid rgb(10,10,10);
    border-radius: 4px;
    background-color: #f5f5f5;
}

QWidget{
    background-color: rgb(10,10,10);
    color: #ffffff;
    font-size: 12px;
    font-family: "Microsoft YaHei";
    border: 2px solid  rgb(10,10,10);
}

